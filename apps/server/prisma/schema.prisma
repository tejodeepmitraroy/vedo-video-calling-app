generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id         String    @id @default(cuid())
  first_name String
  last_name  String
  email      String   
  image_url  String
  friendsIds String[]
  meetings   Meeting[]
}

model Meeting {
  id             Int      @id @default(autoincrement())
  title          String
  description    String?
  videoCallUrl   String
  startTime      DateTime
  endTime        DateTime
  createdById    String
  participantIds String[]
  createdBy      User     @relation(fields: [createdById], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
